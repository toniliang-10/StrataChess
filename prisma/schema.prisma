generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//Create the models here
// example: https://www.prisma.io/docs/orm/prisma-schema/data-model/models

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  hashedPassword  String?
  name      String
  createdAt DateTime @default(now())
  isActive  Boolean  @default(false)
  phone     String?  @default("N/A")

  winsVsStockfish  Int   @default(0)
  drawsVsStockfish Int  @default(0)
}


model StockfishStats {
  id               Int   @id @default(autoincrement())

  // players who beat Stockfish: { "userId": winsCount }
  beatenByPlayers  Json  @db.Json

  // players who drew with Stockfish: { "userId": drawCount }
  drawnByPlayers   Json  @db.Json
}

